<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/back3"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textStyle="bold"
        android:text="中  控  系  统"
        android:textColor="@color/white"
        android:textSize="32dp"
        >
    </TextView>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.02"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9"/>
    <TextView
        android:id="@+id/gs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:text=">公司概况"
        android:textSize="18dp"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="@id/guideline"

        />
    <TextView
        android:id="@+id/honor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/gs"
        android:layout_marginTop="40dp"
        android:text=">荣耀起航"
        android:textSize="18dp"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="@id/guideline"

        />
    <TextView
        android:id="@+id/shidai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/honor"
        android:layout_marginTop="40dp"
        android:text=">时代见证"
        android:textSize="18dp"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="@id/guideline"

        />
    <TextView
        android:id="@+id/yeji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/shidai"
        android:layout_marginTop="40dp"
        android:text=">业绩展示"
        android:textSize="18dp"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="@id/guideline"
        />
    <TextView
        android:id="@+id/cuican"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/yeji"
        android:layout_marginTop="40dp"
        android:text=">璀璨荣光"
        android:textSize="18dp"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="@id/guideline"
        />
    <TextView
        android:id="@+id/hexin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/cuican"
        android:layout_marginTop="40dp"
        android:text=">核心竞争力"
        android:textSize="18dp"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="@id/guideline"

        />
    <TextView
        android:id="@+id/jiyu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/hexin"
        android:layout_marginTop="40dp"
        android:text=">共书寄语"
        android:textSize="18dp"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="@id/guideline"
        />

    <Button
        android:id="@+id/keyopen"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginTop="3dp"
        android:text="一键开启"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:background="@drawable/main_btn_selector"
        app:layout_constraintTop_toTopOf="@id/guideline_h"
        app:layout_constraintLeft_toLeftOf="@id/guideline_1"/>

    <Button
        android:id="@+id/keyclose"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:text="一键关闭"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:background="@drawable/main_btn_selector"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/guideline_h"
        app:layout_constraintLeft_toRightOf="@id/keyopen" />

    <Button
        android:id="@+id/lightopen"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:background="@drawable/main_btn_selector"
        android:text="灯开启"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/guideline_h"
        app:layout_constraintLeft_toRightOf="@id/keyclose" />

    <Button
        android:id="@+id/lightclose"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:background="@drawable/main_btn_selector"
        android:text="灯关闭"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/guideline_h"
        app:layout_constraintLeft_toRightOf="@id/lightopen" />


</androidx.constraintlayout.widget.ConstraintLayout>
